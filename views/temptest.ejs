<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Plant Details</title>
    <script src="/import/jquery-3.7.1.min.js"></script>
    <link href="/import/bootstrap.min.css" rel="stylesheet">
    <script src="/import/bootstrap.min.js"></script>
    <style>
        /* Custom Popup Styles */
        .popup {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }

        .popup-content {
            background: white;
            padding: 20px;
            border-radius: 8px;
            max-width: 400px;
            width: 100%;
        }

        .popup-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .popup-close {
            cursor: pointer;
            font-size: 24px;
        }
    </style>
</head>
<body>
<!-- Page Header -->
<div style="display: flex; align-items: center;">
    <h1 style="margin-right: 10px;">Plant Details</h1>
    <button type="button" class="btn btn-danger ml-2" onclick="openEditPopup()">Edit</button>
</div>

<!-- Custom Popup Window -->
<div class="popup" id="editPopup">
    <div class="popup-content">
        <div class="popup-header">
            <h5>Edit Plant Name</h5>
            <span class="popup-close" onclick="closeEditPopup()">&times;</span>
        </div>
        <p>Please input your preferred plant name:</p>
        <input type="text" id="preferredPlantName" class="form-control mb-2">
        <button type="button" class="btn btn-secondary me-2" onclick="closeEditPopup()">Cancel</button>
        <button type="button" class="btn btn-primary" onclick="submitRequest()">Submit Request</button>
    </div>
</div>

<!-- JavaScript Logic -->
<script>
    function openEditPopup() {
        document.getElementById('editPopup').style.display = 'flex';
    }

    function closeEditPopup() {
        document.getElementById('editPopup').style.display = 'none';
    }

    async function submitRequest() {
        const preferredPlantName = document.getElementById('preferredPlantName').value;
        alert(`Plant name has been updated to: ${preferredPlantName}`);
        // Your backend request can be made here
        closeEditPopup();
    }
</script>
</body>
</html>
