        }

        .container {
            overflow-y: auto;
            max-height: 80vh;  /* Adjust this value according to the page height */
            font-family: Arial, sans-serif;
        }


        .container thead {
            font-family: 'Roboto', Courier, monospace;
            font-weight: bold;
            font-size: larger;
        }

        .container tbody {
            font-family: 'Roboto', Times, serif;
        }

        .text-center button {
            font-family: 'PoetsenOne';
            background-color: #ff3366 !important; /* Pink button color */
            border-color: #ff3366 !important; /* Match border color */
            color: #ffffff !important; /* White text */
            margin-left: 20px !important; /* Space before button */
        }

        .text-center button:hover {
            background-color: #ff0033 !important; /* Darker pink on hover */
            border-color: #ff0033 !important; /* Match border color */
        }



        .form-check-input.agree,
        .form-check-input.reject {
            position: absolute;
            opacity: 0;
            cursor: pointer;
        }
        .custom-checkbox {
            position: relative;
            display: inline-block;
            width: 16px;
            height: 16px;
        }
        .custom-checkbox:before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 16px;
            height: 16px;
            border-radius: 50%; /* Make it round */
            border: 2px solid #ccc; /* Default border color */
            background-color: white; /* Background color */
            transition: all 0.2s;
        }
        .form-check-input.agree:checked + .custom-checkbox:before,
        .form-check-input.reject:checked + .custom-checkbox:before {
            background-color: #007bff; /* Checked background color */
            border-color: #007bff; /* Checked border color */
        }
        .form-check-input.agree:checked + .custom-checkbox:after,
        .form-check-input.reject:checked + .custom-checkbox:after {
            content: '';
            position: absolute;
            left: 4px;
            top: 4px;
            width: 8px;
            height: 8px;
            border-radius: 50%; /* Inner circle */
            background: white;
        }

        /* New CSS for hover effect */
        tbody tr {
            transition: transform 0.2s; /* Smooth transition for the transform property */
        }

        tbody tr:hover {
            transform: scale(1.05); /* Enlarge the row by 5% when hovered */
            background-color: #f0f0f0; /* Optional: change the background color on hover */
        }
    </style>
