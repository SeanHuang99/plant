<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <script src="/import/jquery-3.7.1.min.js"></script>
    <link href="/import/bootstrap.min.css" rel="stylesheet">
    <script src="/import/bootstrap.min.js"></script>
    <script src="/javascript/idb-utility.js"></script>
    <script src="/javascript/main.js"></script>
    <script src="/javascript/commonTool.js"></script>
    <script src="/javascript/sort.js"></script>
    <style>
        html,
        body {
            margin: 0;
            height: 100%;
            width: 100%;
        }

        /* 自定义样式 */
        .plant-card {
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 20px;
            padding: 10px;
        }

        .plant-card img {
            max-width: 100%;
            height: 200px;
            width: 200px;
        }
    </style>
</head>
<body>
<div class="row">
    <div class="col">
        <h3>All Plants</h3>
    </div>

    <div class="col">
        <div class="row justify-content-end">
            <div class="col-md-2 d-flex justify-content-end align-items-center">
                Sort by:
            </div>
            <div class="col-md-4">
                <select id="dropdown" class="form-select">
                    <option value="option1">None</option>
                    <option value="option2">Time up</option>
                    <option value="option3">Time down</option>
                    <option value="option4">Completed</option>
                    <option value="option5">In Progress</option>
                </select>
            </div>
        </div>

    </div>
</div>

<div>
    <div class="container"></div>
</div>

</body>
<script>
    // 获取下拉列表和显示选项的容器
    const dropdown = document.getElementById('dropdown');
    const selectedOption = document.getElementById('selectedOption');

    // 监听下拉列表的 change 事件
    dropdown.addEventListener('change', function() {
        // 获取用户选择的选项
        const selectedValue = dropdown.value;
        const selectedText = dropdown.options[dropdown.selectedIndex].text;
        if (selectedText==='None'){
            openPlantsIDB().then(IDB=>{
                getAllPlants(IDB).then(plantList=>{
                    deleteAllPlantsDOM()
                    renderPlantList(plantList)
                })
            })
        }
        else if (selectedText==='Time up'){
            sortByDateUp().then(plantList=>{
                deleteAllPlantsDOM()
                renderPlantList(plantList)
            })
        }else if(selectedText==='Time down'){
            sortByDateDown().then(plantList=>{
                deleteAllPlantsDOM()
                renderPlantList(plantList)
            })
        }else if(selectedText==='Completed'){
            completedPlants().then(plants=>{
                deleteAllPlantsDOM()
                renderPlantList(plants)
            })
        }else if(selectedText==='In Progress'){
            inProgressPlants().then(plants=>{
                deleteAllPlantsDOM()
                renderPlantList(plants)
            })
        }
    });
</script>
</html>